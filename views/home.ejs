<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%=csrfToken%>" />
    <title><%=title%></title>
    <link rel="stylesheet" href="./css/styles.css" />
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <% var allCoursesOfSite = allCoursesOfSite %>
    <%- include("header.ejs", { allCoursesOfSite: allCoursesOfSite }) %>

    <div class="min-h-screen">
      <h1 class="text-2xl font-bold m-3 text-slate-900">
        Welcome <%= loggedInUser.name %>!
      </h1>

      <% var availablecourses = availablecourses %>
      <% var loggedInUser = loggedInUser %>
      <% var enrolledcourses = enrolledcourses %>
      <% var notEnrolledCourses = notEnrolledCourses %>
      <% var facultyCourses = facultyCourses %>
      <% var courseEnrollmentCounts = courseEnrollmentCounts %>
      <% var coursePageStatus = coursePageStatus %>

      <!-- faculty course -->
      <% if (loggedInUser.role === 'faculty') { %>
      <%- include("facultycourses.ejs", { facultyCourses: facultyCourses, loggedInUser: loggedInUser }) %>
      <% } %>

      <!-- learn enrolled courses -->
      <% if (loggedInUser.role === 'student' && enrolledcourses.length > 0) { %>
      <%- include("enrolledcourses.ejs", {
                enrolledcourses: enrolledcourses,
                courseEnrollmentCounts: courseEnrollmentCounts,
                coursePageStatus: coursePageStatus
            }) %>
      <% } %>

      <!-- not enrolled course -->
      <%- include("availablecourses.ejs", {
            notEnrolledCourses: notEnrolledCourses,
            courseEnrollmentCounts: courseEnrollmentCounts
        }) %>
    </div>

    <script src="js/functionalities.js"></script>
    <script src="js/fetchFunctions.js"></script>
  </body>
</html>
